# StratLogic Scraper - Environment Variables Template
# Copy this file to .env and update with your actual values

# Core Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
API_V1_STR=/api/v1

# Database Configuration
POSTGRES_SERVER=db
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=stratlogic
POSTGRES_PORT=5432
# Optional: Override with full DATABASE_URL
# DATABASE_URL=postgresql://user:password@db:5432/stratlogic

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# Optional: Override with full REDIS_URL
# REDIS_URL=redis://redis:6379/0

# MinIO Storage Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false

# LLM & Scraper API Keys
# Get your API keys from the respective services
OPENROUTER_API_KEY=your-openrouter-api-key
GEMINI_API_KEY=your-gemini-api-key
ARXIV_API_KEY=your-arxiv-api-key

# Authentication Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# Development Configuration
DEBUG=true
LOG_LEVEL=INFO
